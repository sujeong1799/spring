<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.myweb.www.repository.CommentDAO">
  <insert id="insertCvo">
   insert into comment(bno, writer, content)
   values(#{bno}, #{writer}, #{content})
  </insert>
  <select id="listCvo" resultType="com.myweb.www.domain.CommentVO">
  	select * from comment where bno = #{bno}
  </select>
	<update id = "update">
	update comment set content = #{context}, mod_date=now() where cno = #{cno}
	</update>
  </mapper>